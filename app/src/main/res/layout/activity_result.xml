<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding"
    android:gravity="center">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result_txv_name"
        android:text="ここに名前が表示されます。"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rekishi"
        android:text="生年月日が表示されます。"
        android:textIsSelectable="false"
        android:textStyle="bold" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:text="ここに占い結果が表示されます。"
        android:id="@+id/result_txv_divine"
        android:textColor="#0e0e33"
        android:singleLine="false"
        android:textStyle="italic" />


    //練習
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTest1"
        android:text="text1"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/modoru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戻る"
         />



</LinearLayout>
